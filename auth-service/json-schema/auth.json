{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Product",
  "description": "Auth schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "User name",
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "pattern": "^\\w{3}[\\w|\\d]*$"
    },
    "password": {
      "type": "string",
      "minLength": 6
    }
  },
  "required": ["name", "password"]
}